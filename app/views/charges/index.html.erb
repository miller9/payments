<div class="charges pt-4">
  <div class="container">
    <div class="row">
      <div class="col">
        <%= link_to "Nuevo Cobro", new_charge_path, class: "btn btn-link" %>
        <form>
          <script
              src="https://checkout.epayco.co/checkout.js"
              class="epayco-button"
              data-epayco-key="491d6a0b6e992cf924edd8d3d088aff1"
              data-epayco-amount="50000"
              data-epayco-name="Vestido Mujer Primavera"
              data-epayco-description="Vestido Mujer Primavera"
              data-epayco-currency="cop"
              data-epayco-country="co"
              data-epayco-test="true"
              data-epayco-external="false"
              data-epayco-response="https://ejemplo.com/respuesta.html"
              data-epayco-confirmation="https://ejemplo.com/confirmacion">
          </script>
        </form>

        <table class="table mt-3">
          <thead>
            <tr>
              <th>Fecha</th>
              <th>Referencia</th>
              <th>Valor</th>
              <th>Estado</th>
              <th>Metodo de pago</th>
            </tr>
          </thead>

          <body>
            <% @charges.each do |charge| %>
              <tr>
                <td><%= charge.created_at %></td>
                <td><%= charge.uid %></td>
                <td><%= charge.amount %></td>
                <td>
                  <%= charge.status %>
                  <% if charge.error_message %>
                    <small style="display: block;" > <%= charge.error_message %></small>
                  <% end %>
                </td>
                <td><%= charge.payment_method %></td>
              </tr>
            <% end %>
          </body>
        </table>

      </div>
    </div>
  </div>
</div>
